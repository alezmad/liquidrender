{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "src/compiler/cli.ts",
    "src/compiler/mastra.ts",
    "src/compiler/agents/**",
    "src/compiler/steps/**",
    "src/compiler/workflows/**",
    "src/compiler/types/**",
    "src/compiler/utils/**",
    "src/compiler/iteration.ts",
    "src/compiler/compression-analysis.ts",
    "src/compiler/label-compression-trial.ts",
    "src/compiler/test-pipeline.ts"
  ]
}
