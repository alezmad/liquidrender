{
  "name": "@repo/liquid-code",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./compiler": {
      "types": "./dist/compiler/index.d.ts",
      "import": "./dist/compiler/index.js"
    },
    "./compiler/survey": {
      "types": "./dist/compiler/survey/index.d.ts",
      "import": "./dist/compiler/survey/index.js"
